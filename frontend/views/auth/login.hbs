{{!-- frontend/views/auth/login.hbs --}}
<div class="px-40 flex flex-1 justify-center py-5">
    <div class="layout-content-container flex flex-col w-[512px] max-w-[512px] py-5 max-w-[960px] flex-1">
        <h1 class="text-[#1b0e19] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 text-center pb-3 pt-5">Log in</h1>
        
        {{#if error}}
            <div class="text-red-500 text-center mb-4">{{error}}</div>
        {{/if}}

        <form action="/auth/login" method="POST">
            <div class="flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
                <label class="flex flex-col min-w-40 flex-1">
                    <p class="text-[#1b0e19] text-base font-medium leading-normal pb-2">School ID</p>
                    <input
                        name="schoolId"
                        placeholder="Enter your school ID"
                        class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#1b0e19] focus:outline-0 focus:ring-0 border border-[#e6d0e3] bg-[#fbf8fb] focus:border-[#e6d0e3] h-14 placeholder:text-[#964f8c] p-[15px] text-base font-normal leading-normal"
                        required
                    />
                </label>
            </div>
            <div class="flex max-w-[480px] flex-wrap items-end gap-4 px-4 py-3">
                <label class="flex flex-col min-w-40 flex-1">
                    <p class="text-[#1b0e19] text-base font-medium leading-normal pb-2">Password</p>
                    <input
                        type="password"
                        name="password"
                        placeholder="Enter your password"
                        class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#1b0e19] focus:outline-0 focus:ring-0 border border-[#e6d0e3] bg-[#fbf8fb] focus:border-[#e6d0e3] h-14 placeholder:text-[#964f8c] p-[15px] text-base font-normal leading-normal"
                        required
                    />
                </label>
            </div>
            <div class="flex px-4 py-3">
                <button
                    type="submit"
                    class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-xl h-10 px-4 flex-1 bg-[#92137f] text-[#fbf8fb] text-sm font-bold leading-normal tracking-[0.015em]"
                >
                    <span class="truncate">Log in</span>
                </button>
            </div>
        </form>

        {{#if isAdmin}}
            <p class="text-[#964f8c] text-sm font-normal leading-normal pb-3 pt-1 px-4 text-center">
                Admin Login
            </p>
        {{/if}}
    </div>
</div>