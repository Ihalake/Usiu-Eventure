{{!-- frontend/views/partials/header.hbs --}}
<header class="flex items-center justify-between whitespace-nowrap border-b border-solid border-b-[#f3e8f1] px-10 py-3">
    <div class="flex items-center gap-4 text-[#1b0e19]">
        <div class="size-4">
            {{!-- Your logo SVG here --}}
        </div>
        <h2 class="text-[#1b0e19] text-lg font-bold leading-tight tracking-[-0.015em]">USIU Events</h2>
    </div>
    <div class="flex flex-1 justify-end gap-8">
        {{#if user}}
            <div class="flex items-center gap-2">
                <div class="w-8 h-8 rounded-full bg-[#92137f] text-white flex items-center justify-center">
                    {{user.initials}}
                </div>
                <form action="/auth/logout" method="POST" class="inline">
                    <button type="submit" class="text-[#964f8c] hover:text-[#92137f]">Logout</button>
                </form>
            </div>
        {{/if}}
    </div>
</header>