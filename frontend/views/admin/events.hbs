{{!-- frontend/views/admin/events.hbs --}}
<div class="flex flex-1">
    <!-- Sidebar -->
    <div class="w-64 bg-[#fbf8fb] border-r border-[#e6d0e3] p-4">
        <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 rounded-full bg-[#92137f] text-white flex items-center justify-center font-bold">
                    SA
                </div>
                <div>
                    <p class="text-[#1b0e19] font-medium">System Admin</p>
                    <p class="text-[#964f8c] text-sm">Administrator</p>
                </div>
            </div>
        </div>
        <nav>
            <a href="/admin/dashboard" class="flex items-center gap-2 p-2 rounded-lg hover:bg-[#f3e8f1] text-[#1b0e19] mb-2">
                <span>Dashboard</span>
            </a>
            <a href="/admin/events" class="flex items-center gap-2 p-2 rounded-lg bg-[#f3e8f1] text-[#1b0e19] mb-2">
                <span>Manage Events</span>
            </a>
            <a href="/admin/students" class="flex items-center gap-2 p-2 rounded-lg hover:bg-[#f3e8f1] text-[#1b0e19] mb-2">
                <span>Manage Students</span>
            </a>
            <a href="/auth/logout" class="flex items-center gap-2 p-2 rounded-lg hover:bg-[#f3e8f1] text-[#1b0e19]">
                <span>Logout</span>
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-8">
        {{#if success}}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{success}}
            </div>
        {{/if}}
        {{#if error}}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{error}}
            </div>
        {{/if}}

        <div class="flex justify-between items-center mb-8">
            <h1 class="text-2xl font-bold text-[#1b0e19]">Events Management</h1>
            <a href="/admin/events/create" 
               class="bg-[#92137f] text-white px-6 py-2 rounded-xl hover:bg-[#7b0f6b] transition-colors">
                Create New Event
            </a>
        </div>

        <!-- Events List -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <div class="overflow-x-auto">
                {{#if events.length}}
                    <div class="space-y-4">
                        {{#each events}}
                            <div class="flex items-center gap-4 bg-[#fbf8fb] p-4 rounded-lg">
                                <div class="w-24 h-24 bg-[#f3e8f1] rounded-lg overflow-hidden">
                                    <img src="{{this.image}}" alt="{{this.title}}" class="w-full h-full object-cover">
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-lg font-medium text-[#1b0e19]">{{this.title}}</h3>
                                    <p class="text-[#964f8c] text-sm">{{formatDate this.date}} at {{this.time}}</p>
                                    <p class="text-[#1b0e19] mt-1">{{this.location}}</p>
                                    <div class="flex flex-wrap gap-2 mt-2">
                                        {{#each this.topics}}
                                            <span class="px-2 py-1 text-xs rounded-full bg-[#f3e8f1] text-[#92137f]">
                                                {{this}}
                                            </span>
                                        {{/each}}
                                    </div>
                                </div>
                                <div class="flex gap-2">
                                    <button onclick="deleteEvent('{{this._id}}')"
                                        class="text-red-500 hover:text-red-700 px-3 py-1 rounded-lg hover:bg-red-50">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                {{else}}
                    <p class="text-[#964f8c] text-center py-8">No events have been created yet.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<script>
async function deleteEvent(eventId) {
    if (confirm('Are you sure you want to delete this event?')) {
        try {
            const response = await fetch(`/admin/events/${eventId}`, {
                method: 'DELETE',
            });
            if (response.ok) {
                window.location.reload();
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to delete event');
        }
    }
}
</script>