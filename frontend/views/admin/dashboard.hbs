<div class="flex flex-1">
    <!-- Sidebar -->
    <div class="w-64 bg-[#fbf8fb] border-r border-[#e6d0e3] p-4">
        <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 rounded-full bg-[#92137f] text-white flex items-center justify-center font-bold">
                    SA
                </div>
                <div>
                    <p class="text-[#1b0e19] font-medium">System Admin</p>
                    <p class="text-[#964f8c] text-sm">Administrator</p>
                </div>
            </div>
        </div>
        <nav>
            <a href="/admin/dashboard" class="flex items-center gap-2 p-2 rounded-lg bg-[#f3e8f1] text-[#1b0e19] mb-2">
                <span>Dashboard</span>
            </a>
            <a href="/admin/events" class="flex items-center gap-2 p-2 rounded-lg bg-[#f3e8f1] text-[#1b0e19] mb-2">
                <span>Manage Events</span>
            </a>
            <a href="/admin/students" class="flex items-center gap-2 p-2 rounded-lg hover:bg-[#f3e8f1] text-[#1b0e19] mb-2">
                <span>Manage Students</span>
            </a>
            <a href="/auth/logout" class="flex items-center gap-2 p-2 rounded-lg hover:bg-[#f3e8f1] text-[#1b0e19]">
                <span>Logout</span>
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-8">

           {{#if success}}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{success}}
        </div>
    {{/if}}
    {{#if error}}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            {{error}}
        </div>
    {{/if}}
        
        <h1 class="text-2xl font-bold text-[#1b0e19] mb-8">Student Management</h1>

        <!-- Add Student Form -->
        <div class="bg-white rounded-xl shadow-sm p-6 mb-8">
            <h2 class="text-lg font-bold text-[#1b0e19] mb-4">Add New Student</h2>
            <form action="/admin/students/create" method="POST" class="space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-[#1b0e19] font-medium mb-2">Full Name</label>
                        <input type="text" name="fullName" required
                            class="w-full rounded-xl border border-[#e6d0e3] p-3 focus:outline-none focus:border-[#92137f]">
                    </div>
                    <div>
                        <label class="block text-[#1b0e19] font-medium mb-2">School ID</label>
                        <input type="text" name="schoolId" required
                            class="w-full rounded-xl border border-[#e6d0e3] p-3 focus:outline-none focus:border-[#92137f]">
                    </div>
                    <div>
                        <label class="block text-[#1b0e19] font-medium mb-2">Password</label>
                        <input type="password" name="password" required
                            class="w-full rounded-xl border border-[#e6d0e3] p-3 focus:outline-none focus:border-[#92137f]">
                    </div>
                </div>
                <button type="submit"
                    class="bg-[#92137f] text-white px-6 py-2 rounded-xl hover:bg-[#7b0f6b] transition-colors">
                    Add Student
                </button>
            </form>
        </div>

        

        <!-- Students List -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <h2 class="text-lg font-bold text-[#1b0e19] mb-4">Registered Students</h2>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-[#e6d0e3]">
                            <th class="text-left p-3 text-[#1b0e19]">Full Name</th>
                            <th class="text-left p-3 text-[#1b0e19]">School ID</th>
                            <th class="text-left p-3 text-[#1b0e19]">Created At</th>
                            <th class="text-left p-3 text-[#1b0e19]">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each students}}
                    <tr class="border-b border-[#e6d0e3]">
                        <td class="p-3">{{this.fullName}}</td>
                        <td class="p-3">{{this.schoolId}}</td>
                        <td class="p-3">{{formatDate this.createdAt}}</td>
                        <td class="p-3">
                            <button onclick="deleteStudent('{{this._id}}')"
                                class="text-red-500 hover:text-red-700">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
            </div>
        </div>
    </div>
</div>